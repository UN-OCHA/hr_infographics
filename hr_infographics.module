<?php
/**
 * @file
 * Code for the Infographics feature.
 */

include_once 'hr_infographics.features.inc';

/**
 * Implements hook_og_features_registry()
 */
function hr_infographics_og_features_registry() {
  $registry = array();
  $feature = new stdClass();
  $feature->id = 'hr_infographics';
  $feature->name = t('Maps/Infographics');
  $feature->description = t('Provide maps and infographics to your space.');
  $feature->components = array(
    'node' => array(
      'hr_infographic',
    ),
  );
  $registry[$feature->id] = $feature;
  return $registry;
}

/**
 * Implements hook_og_features_toggle($entity, $entity_id, $entity_type, $features)
 */
function hr_infographics_og_features_toggle($entity, $entity_id, $entity_type, $features) {
  if (isset($features['hr_infographics'])) {
    $mlid = og_menu_single_get_link_mlid('node', $entity_id);
    if (empty($features['hr_infographics'])) {
      menu_link_delete(NULL, 'node/'.$entity_id.'/infographics');
    }
    else {
      // See if menu link already exists
      $menu_link = menu_link_get_preferred('node/'.$entity_id.'/infographics', OG_MENU_SINGLE_MENU_NAME);
      if (empty($menu_link)) {
        $menu_link = array(
          'link_path' => 'node/'.$entity_id.'/infographics',
          'link_title' => 'Maps/Infographics',
          'menu_name' => OG_MENU_SINGLE_MENU_NAME,
          'weight' => 4,
          'plid' => $mlid,
        );
        menu_link_save($menu_link);
      }
    }
  }

}

function hr_infographics_form_hr_document_node_form_alter(&$form, &$form_state) {
  hr_sectors_hide_sectors($form, $form_state);
}

/** 
 * Implementation of hook_entity_info_alter()
 */
